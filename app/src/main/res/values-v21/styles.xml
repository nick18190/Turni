<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the action bar -->
        <item name="colorPrimary">@color/blue_500</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/blue_600</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets -->
        <item name="colorAccent">@color/red_500</item>
        <item name="android:navigationBarColor">@color/indigo_900</item>
        <item name="android:windowContentTransitions">true</item>
        <!-- specify enter and exit transitions -->

    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the action bar -->
        <item name="colorPrimary">@color/blue_500</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/blue_600</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets -->
        <item name="colorAccent">@color/red_500</item>
        <item name="android:navigationBarColor">@color/indigo_900</item>
        <item name="android:windowBackground">@color/black_50</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentTransitions">true</item>

    </style>
</resources>
